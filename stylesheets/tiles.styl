/* slide in from the right */
@keyframes slideInRight {
    from    { transform:translateX(100%); }
    to      { transform: translateX(0); }
}

/* slide in from the bottom */
@keyframes slideInUp {
    from    { transform:translateY(100%); }
    to      { transform: translateY(0); }
}

		
@keyframes fadeIn {
    from    { opacity:0 }
    to      { opacity:1 }
}

/* slide in from the bottom */
@keyframes fadeOut{
	from    { opacity:1 }
    to      { opacity:0 }
}	



.as-width 
	&:before
		content ''
		display inline-block
		margin-bottom 100%
.tl
	&__page
		.ng-enter  { animation: scaleUp 0.5s both ease-in; z-index: 8888; }
		.ng-leave   { animation: slideOutLeft 0.5s both ease-in; z-index: 9999; }
	&__container
		margin 0 auto
		@media only screen and (min-width 768px)
			margin 20px auto 20px auto
			&:before
				content ''
				display inline-block
				margin-bottom calc(100% + 30px)
				float left
	&__link
		font-weight 100
		background-color currentColor
		transition all 0.25s ease-in
		width calc(100% - 5px)
		height calc(100% - 5px)
		position absolute
		left 50%
		top 50%
		transform: translate(-50% , -50%)
		&:hover
			box-shadow 0 0 0px 3px currentColor
			transition all 0.25s ease-in
	&__window
		float left
		@media only screen and (min-width 768px)
			overflow hidden
		&:before, &:after
			content ''
			display inline-block
			float left
			@media only screen and (min-width 768px)
				margin-bottom 35%
	&__slider
		display block
		position absolute
		top 0
		width intrinsic
		width -moz-max-content
		width -webkit-max-content
		min-width calc(100% - 30px)
		transition left 0.25s ease-in-out
	&__panel
		padding 0
		height 100%
		float none
		clear both
		@media only screen and (min-width 768px)
			clear none
			float left
			height 100%
			max-height 768px
.tl
	&__box
		float left 
		padding 0
		&--1
			float left
			&:before
				content ""
				display block
				margin-bottom 100%
		&--2
			float left
			&:before
				content ""
				display block
				margin-bottom 100%
		&--3
			float left
			&:before
				content ""
				display block
				margin-bottom 100%
	&__label
		position absolute
		transform translate(-50%, -50%)
		top 50%
		left 50%
		color #fff
	&__propagator
		float none
		margin 0 auto
		text-align center
		display none
		@media only screen and (min-width 768px)
			display block
	&__propagation
		width 15px
		height 15px
		background-color #ccc
		margin 5px
		border-radius 50%
		display inline-block
		&--current
			background-color #959595


	&__fadeout
		opacity 0
		height 0
		transition opacity 0.5s ease-in
	&__fadein
		opacity 1
		height auto
		transition opacity 0.5s ease-in
	&__delay
		&--1
			transition-delay 1s
		&--05
			transition-delay 0.5s
		&--025
			transition-delay 0.25s

